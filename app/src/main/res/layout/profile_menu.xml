<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="385dp"
        android:layout_height="768dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="73dp" />

            <ImageView
                android:id="@+id/imagenPerfil"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/nombreView"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:backgroundTintMode="add"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="@style/AppTheme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombreView2"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:backgroundTintMode="add"
                        android:gravity="center_vertical"
                        android:text="@string/peso_actual"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:theme="@style/AppTheme" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/pesoView"
                        android:layout_width="186dp"
                        android:layout_height="101dp"
                        android:layout_weight="1"
                        android:gravity="center|clip_vertical"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="goToUpdatePeso"
                        android:text="Actualizar"
                        android:textSize="10sp"
                        android:theme="@style/AppTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombreView3"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:backgroundTintMode="add"
                        android:gravity="center"
                        android:text="IMC"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:theme="@style/AppTheme" />

                    <TextView
                        android:id="@+id/imcView"
                        android:layout_width="168dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/imcTextView"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:onClick="gotoDietMenu"
                android:text="MI DIETA" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:onClick="gotoDietFollow"
                android:text="Seguimiento de dieta" />

            <Button
                android:id="@+id/solicitarDietistaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToChooseDietician"
                android:text="@string/solicitar_dietista"
                android:theme="@style/AppTheme" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:onClick="gotoUpdateUser"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.constraintlayout.widget.ConstraintLayout>