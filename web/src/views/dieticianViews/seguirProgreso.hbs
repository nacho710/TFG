{{> navbarLoggedDietician }}

<div class="col-md-6 offset-md-3">
  <div class="card">
    <div class="card-header">
      <h1>Seguimiento de {{patient.username}}</h1>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <div class="row m-l-0 m-r-0 informacionUser">
          <div class="col-sm-4 bg-c-lite-green user-profile">
            <div class="card-block text-center text-white">
              <div class="m-b-25"> <img src={{fotoPerfil}} class="img-radius imagenPerfil"
                  alt="User-Profile-Image"> </div>
              <h6 class="f-w-600"></h6>
              <p> {{patient.email}}</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>

            </div>
          </div>
          <div class="col-sm-8">
            <div class="card-block">
              <div class="row">
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600 descripcionPaciente">Telefono</p>
                  <h6 class="text-muted f-w-400 detallePaciente">{{patient.phone}}</h6>
                </div>
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600 descripcionPaciente">Edad</p>
                  <h6 class="text-muted f-w-400 detallePaciente">{{patient.age}}</h6>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600 descripcionPaciente">Altura</p>
                  <h6 class="text-muted f-w-400 detallePaciente">{{patient.height}} cm</h6>
                </div>
                <div class="col-sm-6">
                  <p class="m-b-10 f-w-600 descripcionPaciente">Peso</p>
                  <h6 class="text-muted f-w-400 detallePaciente">{{patient.weight}} kg</h6>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">

                  <a href="/modificarDieta/{{patientId}}" class="btn myButtonAmarillo">Modificar dieta</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{#if patient.Follow}}



        <div class="slds-scrollable_y scroll cardsListaPaciente">
          {{#each patient.Follow}}
          <!-- <lightning-card class="carta"> -->

          <div class="card-Paciente">
            <div class="columnaFilas">


              <div class="filaDatos">
                <div class="columnaDia">
                  <p class="notas-text-primera">Día: <span class="notas-text-abajo">{{@key}}</span></p>

                </div>
                <div class="columnaComentario">
                  <p class="notas-text-primera ">Comentario para el día: <span
                      class="notas-text-abajo">{{coment}}</span>
                  </p>
                </div>
                <div class="columnaDescripcion">
                  {{#if descripcion}}
                  <p class="notas-text-primera ">Descripción usuario: <span
                      class="notas-text-abajo">{{descripcion}}</span></p>
                  {{/if}}
                  {{#else}}
                  <p class="notas-text-primera ">Descripción usuario: <span class="notas-text-abajo">No rellenado</span>
                  </p>
                  {{/else}}
                  </p>


                </div>

              </div>
              <div class="filaDatos filaComidas">
                <div class="columnaDatos">
                  <div>
                    {{#ifeq food1.[1] "true" }}
                    <p class="notas-text-primera ">Comida 1</br> <span class="notas-text-abajo">Cumplida</span></p>
                    {{/ifeq}}
                    {{#ifeq food1.[1] "false" }}
                    <p class="notas-text-primera ">Comida 1</br> <span class="notas-text-abajo">No cumplida</span></p>
                    {{/ifeq}}
                  </div>

                </div>
                <div class="columnaDatos">
                  <div>
                    {{#ifeq food2.[1] "true" }}
                    <p class="notas-text-primera ">Comida 2</br> <span class="notas-text-abajo">Cumplida</span></p>
                    {{/ifeq}}
                    {{#ifeq food2.[1] "false" }}
                    <p class="notas-text-primera ">Comida 2</br> <span class="notas-text-abajo">No cumplida</span></p>
                    {{/ifeq}}
                  </div>

                </div>
                <div class="columnaDatos">
                  <div>
                    {{#ifeq food3.[1] "true" }}
                    <p class="notas-text-primera ">Comida 3</br> <span class="notas-text-abajo">Cumplida</span></p>
                    {{/ifeq}}
                    {{#ifeq food3.[1] "false" }}
                    <p class="notas-text-primera ">Comida 3</br> <span class="notas-text-abajo">No cumplida</span></p>
                    {{/ifeq}}
                  </div>
                </div>
                <div class="columnaDatos">
                  <div>
                    {{#ifeq food4.[1] "true" }}
                    <p class="notas-text-primera ">Comida 4</br> <span class="notas-text-abajo">Cumplida</span></p>
                    {{/ifeq}}
                    {{#ifeq food4.[1] "false" }}
                    <p class="notas-text-primera ">Comida 4</br> <span class="notas-text-abajo">No cumplida</span></p>
                    {{/ifeq}}
                  </div>

                </div>
                <div class="columnaDatos">
                  <div>
                    {{#ifeq food5.[1] "true" }}
                    <p class="notas-text-primera ">Comida 5</br> <span class="notas-text-abajo">Cumplida</span></p>
                    {{/ifeq}}
                    {{#ifeq food5.[1] "false" }}
                    <p class="notas-text-primera ">Comida 5</br> <span class="notas-text-abajo">No cumplida</span></p>
                    {{/ifeq}}
                  </div>
                </div>

              </div>
            </div>

          </div>

          <!-- </lightning-card> -->


          {{/each}}
        </div>
    </div>
    </ul>
    {{else}}
    <p>El paciente no tiene ningún registro</p>
    {{/if}}
    </ul>
  </div>

</div>