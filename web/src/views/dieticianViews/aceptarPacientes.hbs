{{> navbarLoggedDietician }} 

<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Pacientes que requieren tus servicios</h1>
        </div>
        <div class="card-body">
            {{#if patient}}
            <ul class="list-group">
                {{#each patient}}
                <li class="list-group-item d-flex justify-content-between align-items-center list-patient">
                    <p class="info-patient">Nombre y apellidos: <br></br>{{username}}</p> 
                    <p class="info-patient">Email: <br></br> {{email}} </p>
                    <p class="info-patient">Telefono: <br></br>{{phone}} </p>
                    <p class="info-patient">Edad: <br></br>{{age}} </p> 
                    <p class="info-patient">Altura: {{height}} <br></br></p> 
                    <p class="info-patient">Peso: <br></br>{{weight}} </p>
                    <a href="/rechazarPaciente/{{@key}}" class="btn btn-danger">Rechazar paciente</a>
                    <a href="/aceptarPaciente/{{@key}}" class="btn myButtonVerde">Aceptar paciente</a>

                </li>
                {{/each}}
            </ul>
            {{else}}
                <p>No tienes solicitudes nuevas de pacientes</p>
            {{/if}}
        </div>
        <div class="card-footer">
        </div>
    </div>
</div>