<div class="page-wrapper bg-red p-t-180 p-b-100 font-robo">
    <div class="wrapper wrapper--w960">
        <div class="card card-2">
            <div class="card-heading"></div>
            <div class="card-body">
                 {{#if dietician}}
                <h2 class="title">Modifica los datos del dietista</h2>
                <form action="/modificarDietista/{{dieticianId}}" method="POST">
                    <div class="form-group">
                        <p>Nombre y apellidos: <input type="text" name="nombre" required="true" value="{{dietician.username}}" class="form-control" autofocus></p>
                    </div>
                    <div class="form-group">
                        <p>Telefono: <input type="tel" name="phone" required="true" value="{{dietician.phone}}" class="form-control"></p>
                    </div>
                    <div class="form-group">
                        <p>Descripci√≥n dietista: <input type="text" name="description" value="{{dietician.description}}" required="true"
                                class="form-control"></p>
                    </div>

                    <button class="btn btn-primary btn-block">
                        Modificar dietista
                    </button>
                    
                </form>
                 {{else}}
                 <h2 class="title">Ha habido un error con el dietista</h2>
                  {{/if}}
            </div>
        </div>
    </div>
</div>




